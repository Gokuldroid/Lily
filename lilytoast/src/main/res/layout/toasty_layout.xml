<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toasty_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/toasty_padding"
            android:visibility="gone"
            android:layout_marginTop="@dimen/toasty_padding"
            android:layout_marginBottom="@dimen/toasty_padding"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/toasty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/toasty_icon"
            android:layout_toRightOf="@+id/toasty_icon"
            android:gravity="center"
            android:padding="@dimen/toasty_padding"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
